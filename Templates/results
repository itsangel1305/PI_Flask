    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.getElementById('result1').value = localStorage.getItem('result1');
        document.getElementById('result2').value = localStorage.getItem('result2');

        function loadUsers() {
            const users = JSON.parse(localStorage.getItem('users')) || [];
            const userList = document.getElementById('userList');
            userList.innerHTML = '';
            users.forEach((user, index) => {
                const userItem = document.createElement('div');
                userItem.className = 'user-item';
                userItem.innerHTML = `<strong>${index + 1}. ${user.firstName} ${user.lastName}</strong>`;
                userList.appendChild(userItem);
            });
        }

        loadUsers();
    </script>
